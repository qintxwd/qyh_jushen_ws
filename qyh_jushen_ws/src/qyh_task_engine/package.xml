<?xml version="1.0"?>
<?xml-model href="http://download.ros.org/schema/package_format3.xsd" schematypens="http://www.w3.org/2001/XMLSchema"?>
<package format="3">
  <name>qyh_task_engine</name>
  <version>0.1.0</version>
  <description>
    具身智能任务编排与执行引擎
    基于 py_trees 的行为树引擎，支持可视化编程和 LLM 生成的任务执行
  </description>
  <maintainer email="qyh@example.com">QYH Team</maintainer>
  <license>MIT</license>

  <buildtool_depend>ament_cmake</buildtool_depend>
  <buildtool_depend>ament_cmake_python</buildtool_depend>

  <!-- ROS2 核心依赖 -->
  <depend>rclpy</depend>
  <depend>std_msgs</depend>
  <depend>std_srvs</depend>
  <depend>geometry_msgs</depend>
  <depend>sensor_msgs</depend>
  <depend>action_msgs</depend>
  <depend>rclpy_action</depend>

  <!-- 项目内部依赖 -->
  <depend>qyh_jaka_control_msgs</depend>
  <depend>qyh_gripper_msgs</depend>
  <depend>qyh_task_engine_msgs</depend>

  <!-- 测试依赖 -->
  <test_depend>ament_lint_auto</test_depend>
  <test_depend>ament_lint_common</test_depend>
  <test_depend>pytest</test_depend>

  <export>
    <build_type>ament_cmake</build_type>
  </export>
</package>
